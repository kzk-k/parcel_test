/* ============================================================================

		header

============================================================================ */

body
	position relative
	background-color #000

#app
	display flex
	flex-wrap wrap
	min-height 100vh
	&::before
		content ""
		position absolute
		top 0
		left 0
		z-index -1
		// filter sepia(100)
		width 100%
		height 100%
		opacity 0.6
		opacity 0.3
		background url("../img/test3.jpg") 0 0 no-repeat / cover

.l-mainContainer
	width 640px
	margin auto

.l-footer
	width 100%
	margin 0 auto
	align-self flex-end
	height 40px
	line-height 40px
	.copyright
		display block
		width 640px
		margin auto
		text-align right
		font-size 14px
		color #fff

.btnWrap
	display table
	overflow hidden
	margin auto
	border-radius 2px

.mdl-button
	letter-spacing 0.05em